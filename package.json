{
    "name": "ts-template-frontend",
    "version": "0.0.0",
    "scripts": {
        "ng": "ng",
        "start:prod": "ng serve --port=4281 --host=0.0.0.0",
        "start": "ng serve --port=4281 --host=0.0.0.0 --disable-host-check -c development",
        "build": "ng version && ng build -c production",
        "build:test": "ng version; ng build -c test",
        "lint": "eslint . --ext .ts",
        "lint:json": "eslint . --ext .ts -f json -o .eslint-results.json",
        "lint:fix": "eslint . --fix --ext .ts",
        "translations": "ngx-translate-extract --input ./src --output ./src/assets/i18n/nl-NL.json ./src/assets/i18n/en-GB.json --clean --sort --format namespaced-json --marker translationMarker",
        "translations:add": "git add ./src/assets/i18n",
        "translations:check": "node ./checkTranslations.js"
    },
    "private": true,
    "pre-commit": {
        "run": [
            "lint:fix",
            "translations",
            "translations:check",
            "translations:add"
        ]
    },
    "dependencies": {
        "@angular/animations": "17.2.2",
        "@angular/cdk": "17.2.1",
        "@angular/common": "17.2.2",
        "@angular/compiler": "17.2.2",
        "@angular/core": "17.2.2",
        "@angular/forms": "17.2.2",
        "@angular/platform-browser": "17.2.2",
        "@angular/platform-browser-dynamic": "17.2.2",
        "@angular/router": "17.2.2",
        "@bartholomej/ngx-translate-extract": "8.0.2",
        "@biesbjerg/ngx-translate-extract-marker": "1.0.0",
        "@ngx-translate/core": "15.0.0",
        "@ngx-translate/http-loader": "8.0.0",
        "@ngxs/devtools-plugin": "3.8.2",
        "@ngxs/router-plugin": "3.8.2",
        "@ngxs/storage-plugin": "3.8.2",
        "@ngxs/store": "3.8.2",
        "angular-svg-icon": "17.0.0",
        "crypto-browserify": "3.12.0",
        "http-browserify": "1.7.0",
        "https-browserify": "1.0.0",
        "jwt-decode": "4.0.0",
        "ngx-device-detector": "^7.0.0",
        "os-browserify": "0.3.0",
        "rxjs": "7.8.1",
        "sass-rem": "4.0.0",
        "stream-browserify": "3.0.0",
        "tslib": "2.6.2",
        "zone.js": "0.12.0"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "17.2.1",
        "@angular-eslint/eslint-plugin": "17.2.1",
        "@angular-eslint/eslint-plugin-template": "17.2.1",
        "@angular/cli": "17.2.1",
        "@angular/compiler-cli": "17.2.2",
        "@types/node": "20.11.20",
        "@typescript-eslint/eslint-plugin": "7.1.0",
        "@typescript-eslint/parser": "7.1.0",
        "eslint": "8.57.0",
        "eslint-plugin-no-loops": "0.3.0",
        "pre-commit": "1.2.2",
        "typescript": "5.3.3"
    },
    "browser": {
        "fs": false,
        "zlib": false,
        "assert": false,
        "tls": false,
        "url": false,
        "net": false,
        "path": false
    }
}
